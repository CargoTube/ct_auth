%% -*- erlang -*-
{erl_opts, [debug_info]}.
{deps, [
        {lager, "3.5.1"}
       ]}.

{plugins, [
           {rebar3_lint, {git, "https://github.com/bwegh/rebar3_lint.git", {branch, "master"}}}
          ]}.

{relx, [{release, {cargotube, "semver"},
         [cargotube]},
        {sys_config, "config/sys.config"},
        {dev_mode, false},
        {include_erts, true},
        {include_src, false},
        {generate_start_script, true}]}.


{elvis, [
         #{dirs => ["."],
           filter => "elvis.config",
           ruleset => elvis_config },
         #{dirs => ["src"],
           filter => "*.erl",
           ruleset => erl_files },
         #{dirs => ["."],
           filter => "Makefile",
           ruleset => makefiles },
         #{dirs => ["."],
           filter => "rebar.config",
           ruleset => rebar_config }
        ] }.
